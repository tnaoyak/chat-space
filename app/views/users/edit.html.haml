#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %div(class="account-page__inner--left__line")
      %h5 アカウントの編集
      %div(class="account-page__inner--left__link")
        = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
        = link_to "トップページに戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true, class: "field-input__text"
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email, class: "field-input__text"
        .actions
          = f.submit "Update", class: 'btn'
